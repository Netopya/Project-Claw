---
export interface Props {
  class?: string;
  padding?: 'none' | 'sm' | 'md' | 'lg';
  hover?: boolean;
}

const { 
  class: className = '',
  padding = 'md',
  hover = false,
  ...props 
} = Astro.props;

const baseClasses = 'bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 shadow-sm';

const paddingClasses = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};

const hoverClasses = hover ? 'hover:shadow-md transition-shadow' : '';

const classes = `${baseClasses} ${paddingClasses[padding]} ${hoverClasses} ${className}`;
---

<div class={classes} {...props}>
  <slot />
</div>