{
  "name": "project-claw",
  "version": "1.0.0",
  "description": "A Node.js-based anime watchlist application with MyAnimeList integration",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "api:dev": "tsx watch src/api/server.ts",
    "api:start": "tsx src/api/server.ts",
    "api:test": "tsx src/api/test-endpoints.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "db:init": "tsx src/db/init-schema.ts",
    "db:verify": "tsx src/db/verify-schema.ts",
    "test:mal": "tsx src/api/test-mal.ts",
    "test:validation": "tsx src/api/test-validation.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "docker:dev": "docker-compose up --build",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "@astrojs/react": "^3.6.2",
    "@astrojs/tailwind": "^5.1.0",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hono/node-server": "^1.12.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "astro": "^4.15.4",
    "better-sqlite3": "^11.3.0",
    "drizzle-orm": "^0.33.0",
    "hono": "^4.6.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.10",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.5.4",
    "@vitest/ui": "^3.2.4",
    "drizzle-kit": "^0.24.2",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  }
}